<%- layout("/layouts/boilerplate")%>

<div class="row mt-4">
    <div class="col-md-6 offset-md-3">
        <div class="alert alert-danger shadow-sm" role="alert">
            <h4 class="alert-heading mb-3">
                <i class="fas fa-exclamation-circle me-2"></i>
                Oops! Something went wrong
            </h4>
            <p class="mb-0"><%= error.message || "An unexpected error occurred" %></p>
            <% if (error.status === 404) { %>
                <p class="mb-0">The page you're looking for might have been removed or is temporarily unavailable.</p>
            <% } %>
            <hr>
            <div class="d-flex justify-content-between align-items-center">
                <p class="mb-0"><small>Error Status: <%= error.status || 500 %></small></p>
                <a href="/listings" class="btn btn-sm btn-outline-danger">
                    <i class="fas fa-home me-1"></i>
                    Return to Home
                </a>
            </div>
        </div>
        <% if (process.env.NODE_ENV !== "production" && error.stack) { %>
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Debug Information</h5>
                </div>
                <div class="card-body">
                    <pre class="mb-0" style="white-space: pre-wrap;"><%= error.stack %></pre>
                </div>
            </div>
        <% } %>
    </div>
</div>