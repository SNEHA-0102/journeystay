<%- layout("/layouts/boilerplate") %>
<div class="container settings-container">
    <div class="settings-header text-center mb-5">
        <h1 class="display-5">
            <i class="bi bi-gear me-2"></i>Account Settings
        </h1>
        <p class="text-muted">Manage Your Profile and Preferences</p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="settings-card bg-profile-settings">
                <h3 class="card-title">
                    <i class="bi bi-person-fill me-2"></i>Profile Settings
                </h3>
                <form>
                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" value="John Alexander Doe">
                    </div>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" value="john_traveler">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" value="john.doe@journeystay.com">
                    </div>
                    <div class="mb-3">
                        <label for="bio" class="form-label">Bio</label>
                        <textarea class="form-control" id="bio" rows="3">Travel Enthusiast & Adventure Seeker</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Save Changes
                    </button>
                </form>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="settings-card bg-account-security">
                <h3 class="card-title">
                    <i class="bi bi-shield-lock me-2"></i>Account Security
                </h3>
                <form>
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Current Password</label>
                        <input type="password" class="form-control" id="currentPassword">
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="newPassword">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                        <input type="password" class="form-control" id="confirmPassword">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="twoFactor">
                        <label class="form-check-label" for="twoFactor">Enable Two-Factor Authentication</label>
                    </div>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-lock me-2"></i>Change Password
                    </button>
                </form>
            </div>
        </div>

        <div class="col-12 mb-4">
            <div class="settings-card bg-notification-preferences">
                <h3 class="card-title">
                    <i class="bi bi-bell me-2"></i>Notification Preferences
                </h3>
                <div class="row">
                    <div class="col-md-6">
                        <h5>Email Notifications</h5>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="bookingUpdates" checked>
                            <label class="form-check-label" for="bookingUpdates">
                                Booking Updates
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="promotionalEmails">
                            <label class="form-check-label" for="promotionalEmails">
                                Promotional Offers
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5>Push Notifications</h5>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="tripReminders" checked>
                            <label class="form-check-label" for="tripReminders">
                                Trip Reminders
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="newDestinations">
                            <label class="form-check-label" for="newDestinations">
                                New Destination Alerts
                            </label>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-2"></i>Save Notification Preferences
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .settings-container {
        max-width: 1200px;
        padding: 30px 15px;
    }

    .settings-card {
        background: linear-gradient(135deg, #f5f7fa, #e6e9f0);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .settings-card:hover {
        transform: translateY(-5px);
    }

    .card-title {
        border-bottom: 2px solid rgba(0,0,0,0.1);
        padding-bottom: 10px;
        margin-bottom: 20px;
        color: #333;
    }

    .bg-profile-settings {
        background: linear-gradient(135deg, #f6d365, #fda085);
    }

    .bg-account-security {
        background: linear-gradient(135deg, #84fab0, #8fd3f4);
    }

    .bg-notification-preferences {
        background: linear-gradient(135deg, #a1c4fd, #c2e9fb);
    }

    @media (max-width: 768px) {
        .settings-card {
            padding: 15px;
        }
    }
</style>